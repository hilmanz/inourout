<div id="theContainer" class="inboxPage">
    <div class="theContainer">
        <div class="head-title">
            <h1 class="fl">Input Badges</h1>
        </div> <!-- /.head-title -->
        <div class="formContent">
            <form method="POST" action="" enctype="multipart/form-data" >
			<table border=1>
				<tr>
					<td>Name</td>
					<td>:</td>
					<td><input type="text" name="name" id="name" value="" /></td>
				</tr>
				<tr>
					<td>Description</td>
					<td>:</td>
					<td><input type="text" name="description" id="description" value="" /></td>
				</tr>
				<tr>
					<td>Type</td>
					<td>:</td>
					<td>
						<select name="type">
							<option value="" selected >-</option>
							<option value="0">Regular</option>
							<option value="1">Special</option>
							<option value="2">Rare</option>
						</select>
					</td>
				</tr>
				<tr>
					<td>image</td>
					<td>:</td>
					<td><input type="file" name="images" value="" /></td>
				</tr>
				<tr>
					<td>Point<label>range 1-100</label></td>
					<td>:</td>
					<td><input type="text" name="point" id="point" value="" onkeypress="return numbersonly(event);"/></td>
				</tr>
				<tr>
					<td>Prob<label>range 1-100 in %</label></td>
					<td>:</td>
					<td><input type="text" name="probability" id="probability" value="" /></td>
				</tr>
				<tr>
					<td>Status</td>
					<td>:</td>
					<td>
						<select name="n_status">
							<option value="0">UnPublished</option>
							<option value="1" selected>Published</option>
						</select>
					</td>
				</tr> 
				<tr>
					<td colspan="3" >
						<input type="submit" name="submit" value="submit" />
						<input type="button" class="btn" value="Cancel" onclick="javascript: window.location.href='{$basedomain}badges';" />
					</td>
				</tr>
			</table>
            </form>
		</div>
	</div>
</div>